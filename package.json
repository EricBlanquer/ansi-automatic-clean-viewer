{
  "name": "ansi-automatic-clean-viewer",
  "displayName": "ANSI Automatic Clean Viewer",
  "description": "Automatically detects and hides ANSI escape codes in any text file, with clean copy functionality",
  "version": "1.3.0",
  "publisher": "eric-blanquer",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "ansi",
    "color",
    "terminal",
    "escape codes",
    "colorize"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EricBlanquer/ansi-automatic-clean-viewer"
  },
  "license": "MIT",
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ansi",
        "extensions": [".ansi"],
        "aliases": ["ANSI", "ansi"]
      }
    ],
    "commands": [
      {
        "command": "ansiCleanViewer.toggle",
        "title": "Toggle ANSI Code Hiding",
        "category": "ANSI Clean Viewer"
      },
      {
        "command": "ansiCleanViewer.copy",
        "title": "Copy Without ANSI Codes",
        "category": "ANSI Clean Viewer"
      }
    ],
    "keybindings": [
      {
        "command": "ansiCleanViewer.copy",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "ANSI Clean Viewer",
      "properties": {
        "ansiCleanViewer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic ANSI code hiding"
        }
      }
    }
  }
}
